<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="16dp">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        style="?android:listSeparatorTextViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/cirme_title_label"
        />

    <EditText
        android:id="@+id/cirme_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/cirme_title_hint"
        />

    <TextView
        android:id="?android:listSeparatorTextViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/cirme_detail_label"
        />

    <Button
        android:id="@+id/crime_date_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Web Nov 14 11:56 EST 2021"
        />

    <CheckBox
        android:id="@+id/crime_solved"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/cirme_sloved_label"
        />
</LinearLayout>