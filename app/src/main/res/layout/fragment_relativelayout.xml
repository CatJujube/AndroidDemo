<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Widgets.Layouts.RelativelayoutFragment">
    <RelativeLayout
        android:id="@+id/rootContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/firstBtn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/general_button_style"
            android:text="first button"
            android:layout_margin="5dp"
            android:layout_alignParentTop="true"
            />

        <Button
            android:id="@+id/secondBtn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/general_button_style"
            android:text="second button"
            android:layout_below="@+id/firstBtn"
            android:layout_margin="5dp"
            />

        <Button
            android:id="@+id/thirdBtn"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:background="@drawable/general_button_style"
            android:text="third button"
            android:padding="5dp"
            android:layout_below="@+id/secondBtn"
            android:layout_margin="5dp" />

        <Button
            android:id="@+id/fourthBtn"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:background="@drawable/general_button_style"
            android:text="fourth button"
            android:padding="5dp"
            android:layout_below="@+id/secondBtn"
            android:layout_toRightOf="@+id/thirdBtn"
            android:layout_margin="5dp" />

        <Button
            android:id="@+id/fifthBtn"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:background="@drawable/general_button_style"
            android:text="fifth button"
            android:padding="5dp"
            android:layout_below="@+id/thirdBtn"
            android:layout_centerHorizontal="true"
            android:layout_margin="5dp" />


    </RelativeLayout>
</FrameLayout>